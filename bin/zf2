#!/usr/bin/env php
<?php

use Zend\ServiceManager\ServiceManager,
    BasConsole\Module;

if(file_exists(__DIR__ . '/../vendor/autoload.php')){
    require_once __DIR__ . '/../vendor/autoload.php';
} else {
    die('Run `php composer.phar install` to get project dependencies');
}

$module         = new Module();
$serviceManager = new ServiceManager($module->getServiceConfig());
$application = $serviceManager->get('ConsoleApp');
$application->run();
